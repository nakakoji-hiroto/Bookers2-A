<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user_relationships_path(user) do %>
          <%= user.followers.count %>
        <% end %>
    </th>
  </tr>
  <tr>
    <th>followers</th>
    <th>
      <%= link_to user_relationships_path(user) do %>
          <%= user.followeds.count %>
        <% end %>
    </th>
  </tr>
</table>
　
<div class='row'>
  <% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <% unless user.followeds.exists?(id: current_user) %> <!-- ここを考える　current_userがフォローーしているか?-->
      <%= link_to 'フォローする', user_relationships_path(user), class: "btn btn-success", method: :post %>
    <% else %>
      <%= link_to 'フォローを外す', user_relationships_path(user), class: "btn btn-info", method: :delete %>
    <% end %>
  <% end %>
</div>