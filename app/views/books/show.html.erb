<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
          <% unless @book.favorited_by?(current_user) %>
            <%= link_to book_favorites_path(@book), method: :post do %>
              <i class="fa-solid fa-heart"></i><span><%= @book.favorites.count %></span>
            <% end %>
          <% else %>
            <%= link_to book_favorites_path(@book), class: "text-danger", method: :delete do %>
              <i class="fa-solid fa-heart"></i><span><%= @book.favorites.count %></span>
            <% end %>
          <% end %>
          </td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
          <td>
            <p>コメント数： <%= @book.book_comments.count %></p>
          </td>
        </tr>
      </table>

      <table>
        <% @book_comments.each do |book_comment| %>
          <tr>
            <td class="pt-2">
              <%= link_to user_path(book_comment.user) do %>
                <%= image_tag book_comment.user.get_profile_image, size:"100x100" %><br>
                <%= book_comment.user.name %>
              <% end %>
            </td>
            <td>
              <%= book_comment.comment %>
            </td>
            <% if book_comment.user == current_user %>
              <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, data: { confirm: "コメントを削除します\nよろしいですか？" }, class: "btn btn-sm btn-danger ml-2" %></td>
            <% end %>
          </tr>
        <% end %>
      </table>
      
      <% if @book_comment.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(@book_comment.errors.count, "error") %> prohibited this obj from being saved:</h3>
        <ul>
          <% @book_comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      
      <%= form_with model: [@book, @book_comment], class: "mt-2" do |f| %>
        <%= f.text_area :comment, class: "w-100", rows: "5" %>
        <%= f.submit "送信" %>
      <% end %>
    </div>
  </div>
</div>